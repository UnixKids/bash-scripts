#!/bin/bash

while [ -n "$1" ];
	do
	case "$1" in
		-p|--php)
			printf "\t\tCLOUD\n/var/opt/remi/php*/log/php-fpm/error.log\n\t       PHYSICAL\n/var/log/php-fpm/error.log\n/opt/nexcess/php*/root/var/log/php-fpm/error.log\n"
			;;
		-s|--ssh)
			printf "\t\tSSH|SFTP\n/var/log/secure\n"
			;;
		-S|--siteworx)
			printf "\t\tSiteworx\n/home/interworx/var/log/\n"
			;;
		-m|--mysql)
			printf "\t\tMySQL|MariaDB\n/var/log/mysqld.log\n"
			;;
		-f|--ftp)
			printf "\t\t FTP\n\t       LOGINS\n/var/log/proftpd/auth.log\n\t      TRANSFER\n/var/log/proftpd/xfer.log\n\t     ENCRYPTION\n/var/log/proftpd/tls.log\n"
			;;
		-h|--help)
			printf "\t\tCOMMON NEXCESS LOGS\n-p|--php: PHP Logs\n-S|--siteworx: Siteworx Logs\n-m|--mysql: MySQL|MariaDB Logs\n-f|--ftp: FTP Logs\n-h|--help: Shows this help prompt\n"
			;;
		*)
			printf "Option $1 not recognized. Use -h or --help for help.\n" ;;

	esac
	shift
done
